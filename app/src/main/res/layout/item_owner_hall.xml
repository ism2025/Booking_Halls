<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="300dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_ownerHall"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_hallPhoto"
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_hallName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:text="Hall Name Here"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/iv_hallPhoto"
                app:layout_constraintTop_toBottomOf="@+id/iv_hallPhoto" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Book: "
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_numBook"
                app:layout_constraintEnd_toStartOf="@+id/tv_numBook" />

            <TextView
                android:id="@+id/tv_numBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="16dp"
                android:text="15"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/iv_hallPhoto"
                app:layout_constraintTop_toBottomOf="@+id/iv_hallPhoto" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>